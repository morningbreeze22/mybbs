<p id="notice"><%= notice %></p>
<br>
<h1>用户列表</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Userid</th>
      <th>Phone</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.userid %></td>
        <td><%= list.phone %></td>
        <td><%= list.role %></td>
        <% if can? :manage,@list %>
          <td><%= link_to '详情', list %></td>
          <td><%= link_to '编辑', edit_list_path(list) %></td>
          <%if can? :destroy %>>
            <td><%= link_to '删除', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end %>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if can? :create, @list %>
<%= link_to '创建新用户', new_list_path %>
<%end %>
<%= link_to '返回',root_path %>
